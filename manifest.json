{
  "$schema": "https://developer.microsoft.com/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
  "manifestVersion": "1.16",
  "id": "e560758a-242c-4dbc-8909-7aeddd75c296",
  "version": "1.0.0.3",
  "name": {
    "short": "Dreyfus Brief Generator",
    "full": "Dreyfus Brief Generator - Automatische Brieferstellung"
  },
  "description": {
    "short": "Automatische Erstellung von Dreyfus-Briefen",
    "full": "Automatische Erstellung von Dreyfus-Briefen nach Vorlage mit Formatierung und Logo-Optionen"
  },
  "developer": {
    "name": "Dreyfus Söhne & Cie AG",
    "websiteUrl": "https://www.dreyfusbank.ch",
    "privacyUrl": "https://www.dreyfusbank.ch/privacy",
    "termsOfUseUrl": "https://www.dreyfusbank.ch/terms"
  },
  "localizationInfo": {
    "defaultLanguageTag": "de-DE",
    "additionalLanguages": []
  },
  "icons": {
    "outline": "https://keshbe.github.io/brief-generator-addin/Dreyfus_Logo_30_Farbe.png",
    "color": "https://keshbe.github.io/brief-generator-addin/Dreyfus_Logo_42_Farbe.png"
  },
  "accentColor": "#7c7c7c",
  "authorization": {
    "permissions": {
      "resourceSpecific": [
        {
          "name": "Document.ReadWrite.All",
          "type": "Delegated"
        }
      ]
    }
  },
  "validDomains": [
    "keshbe.github.io"
  ],
  "showLoadingIndicator": true,
  "extensions": [
    {
      "requirements": {
        "scopes": ["mail"],
        "capabilities": [
          {
            "name": "Mailbox",
            "minVersion": "1.1"
          }
        ]
      },
      "runtimes": [
        {
          "requirements": {
            "capabilities": [
              {
                "name": "WordApi",
                "minVersion": "1.1"
              }
            ]
          },
          "id": "TaskpaneRuntime",
          "type": "general",
          "code": {
            "page": "https://keshbe.github.io/brief-generator-addin/taskpane.html"
          },
          "lifetime": "short",
          "actions": [
            {
              "id": "TaskpaneShow",
              "type": "openPage",
              "view": "dashboard"
            }
          ]
        },
        {
          "requirements": {
            "capabilities": [
              {
                "name": "WordApi",
                "minVersion": "1.1"
              }
            ]
          },
          "id": "CommandsRuntime",
          "type": "general",
          "code": {
            "page": "https://keshbe.github.io/brief-generator-addin/commands.html"
          },
          "lifetime": "short"
        }
      ],
      "ribbons": [
        {
          "contexts": ["default"],
          "tabs": [
            {
              "id": "TabBrief",
              "label": "BRIEF",
              "groups": [
                {
                  "id": "BriefGroup",
                  "label": "Brief",
                  "icon": {
                    "size": 32,
                    "file": "https://keshbe.github.io/brief-generator-addin/Dreyfus_Logo_30_Farbe.png"
                  },
                  "controls": [
                    {
                      "id": "BtnEingabe",
                      "type": "button",
                      "label": "Eingabe",
                      "tooltip": {
                        "title": "Eingabe",
                        "description": "Öffnet das Formular zur Eingabe der Briefdaten"
                      },
                      "icons": [
                        {
                          "size": 16,
                          "file": "https://keshbe.github.io/brief-generator-addin/Dreyfus_Logo_30_Farbe.png"
                        },
                        {
                          "size": 32,
                          "file": "https://keshbe.github.io/brief-generator-addin/Dreyfus_Logo_30_Farbe.png"
                        }
                      ],
                      "supertip": {
                        "title": "Brief Eingabe",
                        "description": "Öffnet das Formular zur Eingabe der Briefdaten"
                      },
                      "actionId": "TaskpaneShow"
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
