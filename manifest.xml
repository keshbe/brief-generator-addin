<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" 
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" 
           xmlns:ov="http://schemas.microsoft.com/office/taskpaneappversionoverrides" 
           xsi:type="TaskPaneApp">

  <!-- Pflicht-Elemente gemäß Schema-Reihenfolge -->
  <Id>e560758a-242c-4dbc-8909-7aeddd75c296</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Dreyfus Soehne und Cie AG</ProviderName>
  <DefaultLocale>de-DE</DefaultLocale>
  
  <!-- Anzeigeinformationen (Policy 100.1) -->
  <DisplayName DefaultValue="Dreyfus Brief Generator" />
  <Description DefaultValue="Automatische Erstellung von Dreyfus-Briefen nach Vorlage mit professionellen Formatierungsoptionen" />
  
  <!-- Icons (Policy 100.3, 1120.1) -->
  <IconUrl DefaultValue="https://keshbe.github.io/brief-generator-addin/Dreyfus_Logo_30_Farbe.png" />
  <HighResolutionIconUrl DefaultValue="https://keshbe.github.io/brief-generator-addin/Dreyfus_Logo_42_Farbe.png" />
  
  <!-- Support URL (Policy 100.5, 1120.1) -->
  <SupportUrl DefaultValue="https://keshbe.github.io/brief-generator-addin/support.html" />
  
  <!-- AppDomains (Policy 100.4) -->
  <AppDomains>
    <AppDomain>https://keshbe.github.io</AppDomain>
  </AppDomains>
  
  <!-- Hosts -->
  <Hosts>
    <Host Name="Document" />
  </Hosts>
  
  <!-- Requirements (Policy 1120.3) -->
  <Requirements>
    <Sets DefaultMinVersion="1.1">
      <Set Name="WordApi" MinVersion="1.1" />
    </Sets>
  </Requirements>
  
  <!-- DefaultSettings -->
  <DefaultSettings>
    <SourceLocation DefaultValue="https://keshbe.github.io/brief-generator-addin/taskpane.html" />
  </DefaultSettings>
  
  <!-- Permissions -->
  <Permissions>ReadWriteDocument</Permissions>

  <!-- VersionOverrides für moderne UI -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="VersionOverridesV1_0">
    <!-- Description -->
    <Description resid="LongDescription" />
    
    <!-- Requirements innerhalb VersionOverrides -->
    <Requirements>
      <bt:Sets DefaultMinVersion="1.1">
        <bt:Set Name="WordApi" MinVersion="1.1" />
      </bt:Sets>
    </Requirements>
    
    <!-- Hosts -->
    <Hosts>
      <Host xsi:type="Document">
        <!-- DesktopFormFactor -->
        <DesktopFormFactor>
          <!-- GetStarted -->
          <GetStarted>
            <Title resid="GetStarted.Title"/>
            <Description resid="GetStarted.Description"/>
            <LearnMoreUrl resid="GetStarted.LearnMoreUrl"/>
          </GetStarted>
          
          <!-- FunctionFile -->
          <FunctionFile resid="Commands.Url" />

          <!-- ExtensionPoint -->
          <ExtensionPoint xsi:type="PrimaryCommandSurface">
            <CustomTab id="DreyfusTab">
              <Label resid="TabLabel" />
              
              <!-- Gruppe: Brief -->
              <Group id="BriefGroup">
                <Label resid="BriefGroupLabel" />
                <Icon>
                  <bt:Image size="16" resid="Icon16"/>
                  <bt:Image size="32" resid="Icon32"/>
                  <bt:Image size="80" resid="Icon80"/>
                </Icon>

                <!-- Button: Eingabe -->
                <Control xsi:type="Button" id="TaskpaneButton">
                  <Label resid="TaskpaneButtonLabel" />
                  <Supertip>
                    <Title resid="TaskpaneButtonLabel" />
                    <Description resid="TaskpaneButtonTooltip" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon16"/>
                    <bt:Image size="32" resid="Icon32"/>
                    <bt:Image size="80" resid="Icon80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>ButtonId1</TaskpaneId>
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>

                <!-- Button: Adresse -->
                <Control xsi:type="Button" id="AddressButton">
                  <Label resid="AddressButtonLabel" />
                  <Supertip>
                    <Title resid="AddressButtonLabel" />
                    <Description resid="AddressButtonTooltip" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon16"/>
                    <bt:Image size="32" resid="Icon32"/>
                    <bt:Image size="80" resid="Icon80"/>
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>kopierenEmpfaengeradresse</FunctionName>
                  </Action>
                </Control>
              </Group>

              <!-- Gruppe: Formatierung -->
              <Group id="FormatGroup">
                <Label resid="FormatGroupLabel" />
                <Icon>
                  <bt:Image size="16" resid="Icon16"/>
                  <bt:Image size="32" resid="Icon32"/>
                  <bt:Image size="80" resid="Icon80"/>
                </Icon>

                <!-- Menu: Standard/Aufzaehlung -->
                <Control xsi:type="Menu" id="FormatMenu">
                  <Label resid="FormatMenuLabel" />
                  <Supertip>
                    <Title resid="FormatMenuLabel" />
                    <Description resid="FormatMenuTooltip" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon16"/>
                    <bt:Image size="32" resid="Icon32"/>
                    <bt:Image size="80" resid="Icon80"/>
                  </Icon>
                  <Items>
                    <Item id="StandardItem">
                      <Label resid="StandardLabel" />
                      <Supertip>
                        <Title resid="StandardLabel" />
                        <Description resid="StandardTooltip" />
                      </Supertip>
                      <Icon>
                        <bt:Image size="16" resid="Icon16"/>
                      </Icon>
                      <Action xsi:type="ExecuteFunction">
                        <FunctionName>applyStandardStyle</FunctionName>
                      </Action>
                    </Item>
                    <Item id="BulletItem1">
                      <Label resid="Bullet1Label" />
                      <Icon>
                        <bt:Image size="16" resid="Icon16"/>
                      </Icon>
                      <Action xsi:type="ExecuteFunction">
                        <FunctionName>applyAufzaehlung1</FunctionName>
                      </Action>
                    </Item>
                    <Item id="BulletItem2">
                      <Label resid="Bullet2Label" />
                      <Icon>
                        <bt:Image size="16" resid="Icon16"/>
                      </Icon>
                      <Action xsi:type="ExecuteFunction">
                        <FunctionName>applyAufzaehlung2</FunctionName>
                      </Action>
                    </Item>
                  </Items>
                </Control>

                <!-- Button: Silbentrennung -->
                <Control xsi:type="Button" id="HyphenButton">
                  <Label resid="HyphenButtonLabel" />
                  <Supertip>
                    <Title resid="HyphenButtonLabel" />
                    <Description resid="HyphenButtonTooltip" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon16"/>
                    <bt:Image size="32" resid="Icon32"/>
                    <bt:Image size="80" resid="Icon80"/>
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>silbentrennung</FunctionName>
                  </Action>
                </Control>
              </Group>

              <!-- Gruppe: Spezial -->
              <Group id="SpecialGroup">
                <Label resid="SpecialGroupLabel" />
                <Icon>
                  <bt:Image size="16" resid="Icon16"/>
                  <bt:Image size="32" resid="Icon32"/>
                  <bt:Image size="80" resid="Icon80"/>
                </Icon>

                <!-- Menu: Logo -->
                <Control xsi:type="Menu" id="LogoMenu">
                  <Label resid="LogoMenuLabel" />
                  <Supertip>
                    <Title resid="LogoMenuLabel" />
                    <Description resid="LogoMenuTooltip" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon16"/>
                    <bt:Image size="32" resid="Icon32"/>
                    <bt:Image size="80" resid="Icon80"/>
                  </Icon>
                  <Items>
                    <Item id="LogoOnItem">
                      <Label resid="LogoOnLabel" />
                      <Icon>
                        <bt:Image size="16" resid="Icon16"/>
                      </Icon>
                      <Action xsi:type="ExecuteFunction">
                        <FunctionName>logoPrintEin</FunctionName>
                      </Action>
                    </Item>
                    <Item id="LogoOffItem">
                      <Label resid="LogoOffLabel" />
                      <Icon>
                        <bt:Image size="16" resid="IconGray16"/>
                      </Icon>
                      <Action xsi:type="ExecuteFunction">
                        <FunctionName>logoPrintAus</FunctionName>
                      </Action>
                    </Item>
                  </Items>
                </Control>

                <!-- Menu: Leidbrief -->
                <Control xsi:type="Menu" id="CondolenceMenu">
                  <Label resid="CondolenceMenuLabel" />
                  <Supertip>
                    <Title resid="CondolenceMenuLabel" />
                    <Description resid="CondolenceMenuTooltip" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon16"/>
                    <bt:Image size="32" resid="Icon32"/>
                    <bt:Image size="80" resid="Icon80"/>
                  </Icon>
                  <Items>
                    <Item id="CondolenceOnItem">
                      <Label resid="CondolenceOnLabel" />
                      <Icon>
                        <bt:Image size="16" resid="Icon16"/>
                      </Icon>
                      <Action xsi:type="ExecuteFunction">
                        <FunctionName>leidbriefEin</FunctionName>
                      </Action>
                    </Item>
                    <Item id="CondolenceOffItem">
                      <Label resid="CondolenceOffLabel" />
                      <Icon>
                        <bt:Image size="16" resid="Icon16"/>
                      </Icon>
                      <Action xsi:type="ExecuteFunction">
                        <FunctionName>leidbriefAus</FunctionName>
                      </Action>
                    </Item>
                  </Items>
                </Control>
              </Group>
            </CustomTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <!-- Resources -->
    <Resources>
      <bt:Images>
        <bt:Image id="Icon16" DefaultValue="https://keshbe.github.io/brief-generator-addin/Dreyfus_Logo_30_Farbe.png"/>
        <bt:Image id="Icon32" DefaultValue="https://keshbe.github.io/brief-generator-addin/Dreyfus_Logo_30_Farbe.png"/>
        <bt:Image id="Icon80" DefaultValue="https://keshbe.github.io/brief-generator-addin/Dreyfus_Logo_42_Farbe.png"/>
        <bt:Image id="IconGray16" DefaultValue="https://keshbe.github.io/brief-generator-addin/Dreyfus_Logo_30_Grau.png"/>
      </bt:Images>
      
      <bt:Urls>
        <bt:Url id="Commands.Url" DefaultValue="https://keshbe.github.io/brief-generator-addin/commands.html" />
        <bt:Url id="Taskpane.Url" DefaultValue="https://keshbe.github.io/brief-generator-addin/taskpane.html" />
        <bt:Url id="GetStarted.LearnMoreUrl" DefaultValue="https://keshbe.github.io/brief-generator-addin/learnmore.html" />
      </bt:Urls>
      
      <bt:ShortStrings>
        <bt:String id="GetStarted.Title" DefaultValue="Willkommen beim Dreyfus Brief Generator" />
        <bt:String id="TabLabel" DefaultValue="BRIEF" />
        <bt:String id="BriefGroupLabel" DefaultValue="Brief" />
        <bt:String id="TaskpaneButtonLabel" DefaultValue="Eingabe" />
        <bt:String id="AddressButtonLabel" DefaultValue="Adresse" />
        <bt:String id="FormatGroupLabel" DefaultValue="Formatieren" />
        <bt:String id="FormatMenuLabel" DefaultValue="Standard/Aufzaehlung" />
        <bt:String id="StandardLabel" DefaultValue="Standard" />
        <bt:String id="Bullet1Label" DefaultValue="Aufzaehlung 1" />
        <bt:String id="Bullet2Label" DefaultValue="Aufzaehlung 2" />
        <bt:String id="HyphenButtonLabel" DefaultValue="Silbentrennung" />
        <bt:String id="SpecialGroupLabel" DefaultValue="Spezial" />
        <bt:String id="LogoMenuLabel" DefaultValue="Logo" />
        <bt:String id="LogoOnLabel" DefaultValue="Logo einblenden" />
        <bt:String id="LogoOffLabel" DefaultValue="Logo ausblenden" />
        <bt:String id="CondolenceMenuLabel" DefaultValue="Leidbrief" />
        <bt:String id="CondolenceOnLabel" DefaultValue="Rahmen ein" />
        <bt:String id="CondolenceOffLabel" DefaultValue="Rahmen aus" />
      </bt:ShortStrings>
      
      <bt:LongStrings>
        <bt:String id="LongDescription" DefaultValue="Der Dreyfus Brief Generator automatisiert die Erstellung professioneller Geschaeftsbriefe mit vordefinierten Formatvorlagen und Layouts." />
        <bt:String id="GetStarted.Description" DefaultValue="Erste Schritte mit dem Dreyfus Brief Generator. Erstellen Sie professionelle Briefe mit nur wenigen Klicks." />
        <bt:String id="TaskpaneButtonTooltip" DefaultValue="Oeffnet das Eingabeformular zur Erstellung eines neuen Briefes" />
        <bt:String id="AddressButtonTooltip" DefaultValue="Kopiert die Empfaengeradresse in die Zwischenablage" />
        <bt:String id="FormatMenuTooltip" DefaultValue="Waehlen Sie zwischen Standard-Textformat und verschiedenen Aufzaehlungsformaten" />
        <bt:String id="StandardTooltip" DefaultValue="Wendet das Standard-Textformat ohne Aufzaehlung an" />
        <bt:String id="HyphenButtonTooltip" DefaultValue="Startet die manuelle Silbentrennung fuer den ausgewaehlten Text" />
        <bt:String id="LogoMenuTooltip" DefaultValue="Blendet das Firmenlogo im Briefkopf ein oder aus" />
        <bt:String id="CondolenceMenuTooltip" DefaultValue="Aktiviert oder deaktiviert den schwarzen Rahmen fuer Kondolenzbriefe" />
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
