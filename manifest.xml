<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xmlns:ov="http://schemas.microsoft.com/office/taskpaneappversionoverrides"
           xsi:type="TaskPaneApp">

    <!-- Basis-Informationen -->
    <Id>e560758a-242c-4dbc-8909-7aeddd75c296</Id>
    <Version>1.0.0.0</Version>
    <ProviderName>Dreyfus Söhne &amp; Cie AG</ProviderName>
    <DefaultLocale>de-DE</DefaultLocale>
    <DisplayName DefaultValue="Dreyfus Brief Generator" />
    <Description DefaultValue="Vereinfachtes Add-in mit einem Button" />
    
    <!-- Icons -->
    <IconUrl DefaultValue="https://keshbe.github.io/brief-generator-addin/Dreyfus_Logo_30_Farbe.png"/>
    <HighResolutionIconUrl DefaultValue="https://keshbe.github.io/brief-generator-addin/Dreyfus_Logo_42_Farbe.png"/>
    
    <!-- Support URL -->
    <SupportUrl DefaultValue="https://keshbe.github.io/brief-generator-addin/"/>
    
    <!-- App Domain -->
    <AppDomains>
        <AppDomain>https://keshbe.github.io</AppDomain>
    </AppDomains>
    
    <!-- Host -->
    <Hosts>
        <Host Name="Document" />
    </Hosts>
    
    <!-- Standard-Einstellungen -->
    <DefaultSettings>
        <SourceLocation DefaultValue="https://keshbe.github.io/brief-generator-addin/taskpane.html"/>
    </DefaultSettings>
    
    <Permissions>ReadWriteDocument</Permissions>
    
    <!-- Version Overrides für Ribbon Button -->
    <VersionOverrides xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="VersionOverridesV1_0">
        
        <Hosts>
            <Host xsi:type="Document">
                
                <DesktopFormFactor>
                    <!-- Taskpane URL -->
                    <FunctionFile resid="Taskpane.Url" />
                    
                    <!-- Ribbon Extension -->
                    <ExtensionPoint xsi:type="PrimaryCommandSurface">
                        <CustomTab id="tabBrief">
                            
                            <!-- Eine Gruppe mit einem Button -->
                            <Group id="grpMain">
                                <Label resid="Group.Label" />
                                <Icon>
                                    <bt:Image size="16" resid="Icon.16x16"/>
                                    <bt:Image size="32" resid="Icon.32x32"/>
                                    <bt:Image size="80" resid="Icon.80x80"/>
                                </Icon>
                                
                                <!-- Der einzige Button -->
                                <Control xsi:type="Button" id="btnMain">
                                    <Label resid="Button.Label" />
                                    <Supertip>
                                        <Title resid="Button.Label" />
                                        <Description resid="Button.Tooltip" />
                                    </Supertip>
                                    <Icon>
                                        <bt:Image size="16" resid="Icon.16x16"/>
                                        <bt:Image size="32" resid="Icon.32x32"/>
                                        <bt:Image size="80" resid="Icon.80x80"/>
                                    </Icon>
                                    <Action xsi:type="ShowTaskpane">
                                        <TaskpaneId>MainTaskpane</TaskpaneId>
                                        <SourceLocation resid="Taskpane.Url"/>
                                    </Action>
                                </Control>
                                
                            </Group>
                            
                            <Label resid="Tab.Label" />
                        </CustomTab>
                    </ExtensionPoint>
                </DesktopFormFactor>
            </Host>
        </Hosts>
        
        <!-- Ressourcen -->
        <Resources>
            <bt:Images>
                <bt:Image id="Icon.16x16" DefaultValue="https://keshbe.github.io/brief-generator-addin/Dreyfus_Logo_30_Farbe.png"/>
                <bt:Image id="Icon.32x32" DefaultValue="https://keshbe.github.io/brief-generator-addin/Dreyfus_Logo_30_Farbe.png"/>
                <bt:Image id="Icon.80x80" DefaultValue="https://keshbe.github.io/brief-generator-addin/Dreyfus_Logo_42_Farbe.png"/>
            </bt:Images>
            
            <bt:Urls>
                <bt:Url id="Taskpane.Url" DefaultValue="https://keshbe.github.io/brief-generator-addin/taskpane.html" />
            </bt:Urls>
            
            <!-- Deutsche Strings (Standard) -->
            <bt:ShortStrings>
                <bt:String id="Tab.Label" DefaultValue="BRIEF" />
                <bt:String id="Group.Label" DefaultValue="Brief Generator" />
                <bt:String id="Button.Label" DefaultValue="Brief erstellen" />
            </bt:ShortStrings>
            
            <!-- Englische Strings -->
            <bt:ShortStrings locale="en-US">
                <bt:String id="Tab.Label" DefaultValue="LETTER" />
                <bt:String id="Group.Label" DefaultValue="Letter Generator" />
                <bt:String id="Button.Label" DefaultValue="Create Letter" />
            </bt:ShortStrings>
            
            <!-- Französische Strings -->
            <bt:ShortStrings locale="fr-FR">
                <bt:String id="Tab.Label" DefaultValue="LETTRE" />
                <bt:String id="Group.Label" DefaultValue="Générateur de lettres" />
                <bt:String id="Button.Label" DefaultValue="Créer lettre" />
            </bt:ShortStrings>
            
            <!-- Italienische Strings -->
            <bt:ShortStrings locale="it-IT">
                <bt:String id="Tab.Label" DefaultValue="LETTERA" />
                <bt:String id="Group.Label" DefaultValue="Generatore lettere" />
                <bt:String id="Button.Label" DefaultValue="Crea lettera" />
            </bt:ShortStrings>
            
            <!-- Deutsche Tooltips (Standard) -->
            <bt:LongStrings>
                <bt:String id="Button.Tooltip" DefaultValue="Öffnet den Dreyfus Brief Generator" />
            </bt:LongStrings>
            
            <!-- Englische Tooltips -->
            <bt:LongStrings locale="en-US">
                <bt:String id="Button.Tooltip" DefaultValue="Opens the Dreyfus letter generator" />
            </bt:LongStrings>
            
            <!-- Französische Tooltips -->
            <bt:LongStrings locale="fr-FR">
                <bt:String id="Button.Tooltip" DefaultValue="Ouvre le générateur de lettres Dreyfus" />
            </bt:LongStrings>
            
            <!-- Italienische Tooltips -->
            <bt:LongStrings locale="it-IT">
                <bt:String id="Button.Tooltip" DefaultValue="Apre il generatore di lettere Dreyfus" />
            </bt:LongStrings>
        </Resources>
    </VersionOverrides>
</OfficeApp>
